{% extends 'layout.html.twig' %}

{# Block de title défini dans base.html.twig #}
{% block title %} authentification - HardWhere {% endblock %}

{# Block de Contenu défini dans base.html.twig #}
{% block contenu %}
    <div class="row">
        <div class="col-xs-6 col-xs-push-3">
            <h2 class="text-center">Inscription d'un Membre</h2 >
            <form action="{{ path('index_inscription') }}" class="form-horizontal" method="post">

                <!-- Prénom et Nom -->
                <div class="form-group">
                    <div class="col-xs-6">
                        <input name="PRENOMAUTEUR" required class="form-control"
                            type="text" placeholder="Saisissez votre Prénom">
                    </div>
                    <div class="col-xs-6">
                        <input name="NOMAUTEUR" required class="form-control"
                            type="text" placeholder="Saisissez votre Nom">
                    </div>
                </div>

                <!-- Email et Mot de Passe -->
                <div class="form-group">
                    <div class="col-xs-6">
                        <input name="EMAILAUTEUR" required class="form-control"
                            type="email" placeholder="Saisissez votre Email">
                    </div>
                    <div class="col-xs-6">
                        <input name="MDPAUTEUR" required class="form-control"
                            type="password" placeholder="*********">
                    </div>
                </div>

                <input type="submit" class="btn btn-block le-button huge" value="M'inscrire">

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-push-3">
            <h2 class="text-center">Connexion</h2 >

            {% if error %}
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    {{ error | replace({"Bad credentials." : " Identifiants et/ou mot de passe incorrect."}) }}
                </div>
            {% endif %}

            {% if global.request.get('inscription') == 'success' %}
                <div class="alert alert-success">
                    <p><i class="fa fa-thumbs-up" aria-hidden="true"></i>
                    Félicitation, votre inscription est effective.
                        <br>Vous pouvez maintenant vous connecter.</p>
                </div>
            {% endif %}

            <form action="{{ path('index_inscription') }}" class="form-horizontal" method="post">

                <!-- Email et Mot de Passe -->
                <div class="form-group">
                    <div class="col-xs-12">
                        <input name="_username" value="{{ last_username }}" required class="form-control"
                            type="email" placeholder="Saisissez votre Email">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input name="_password" required class="form-control"
                            type="password" placeholder="*********">
                    </div>
                </div>

                <input type="submit" class="btn btn-block le-button huge" value="Connexion">


            </form>
        </div>
    </div>

            {% endblock %}
