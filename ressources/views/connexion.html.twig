{% extends 'layout.html.twig' %}

{# Block de title défini dans base.html.twig #}
{% block title %} authentification - HardWhere {% endblock %}

{# Block de Contenu défini dans base.html.twig #}
{% block contenu %}


            <!-- ========================================= MAIN ========================================= -->
            <main id="authentication" class="inner-bottom-md">
                <div class="container">
                    <div class="row">

                        <div class="col-md-6">
                            <section class="section sign-in inner-right-xs">
                                <h2 class="bordered">Se connecter</h2>
                                <p>Identifiez-vous</p>

                                <div class="social-auth-buttons">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button class="btn-block btn-lg btn btn-facebook"><i class="fa fa-facebook"></i> Se connecter avec Facebook</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn-block btn-lg btn btn-twitter"><i class="fa fa-twitter"></i> Se connecter avec Twitter</button>
                                        </div>
                                    </div>
                                </div>

                                <form role="form" class="login-form cf-style-1">
                                    <div class="field-row">
                                        <label>Email</label>
                                        <input type="text" class="le-input">
                                    </div><!-- /.field-row -->

                                    <div class="field-row">
                                        <label>Mot de passe</label>
                                        <input type="text" class="le-input">
                                    </div><!-- /.field-row -->

                                    <div class="field-row clearfix">
                                        <span class="pull-left">
                                            <label class="content-color"><input type="checkbox" class="le-checbox auto-width inline"> <span class="bold">Se souvenir de moi</span></label>
                                        </span>
                                        <span class="pull-right">
                                            <a href="#" class="content-color bold">Mot de passe oublié ?</a>
                                        </span>
                                    </div>

                                    <div class="buttons-holder">
                                        <button type="submit" class="le-button huge">Connexion</button>
                                    </div><!-- /.buttons-holder -->
                                </form><!-- /.cf-style-1 -->

                            </section><!-- /.sign-in -->
                        </div><!-- /.col -->

                        <div class="col-md-6">
                            <section class="section register inner-left-xs">
                                <h2 class="bordered">Créer un compte</h2>

                                <form role="form" class="register-form cf-style-1">
                                    <div class="field-row">
                                        <label>Email</label>
                                        <input type="text" class="le-input">
                                    </div><!-- /.field-row -->

                                    <div class="buttons-holder">
                                        <button type="submit" class="le-button huge">S'enregistrer</button>
                                    </div><!-- /.buttons-holder -->
                                </form>

                            </section><!-- /.register -->

                        </div><!-- /.col -->

                    </div><!-- /.row -->
                </div><!-- /.container -->
            </main><!-- /.authentication -->
            {% endblock %}
        
